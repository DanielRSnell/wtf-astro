---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import { Header } from "../components/global/header-ssr.tsx";
import { Footer } from "../components/global/footer.tsx";
import { createSupabaseSSR } from '@/lib/supabase-ssr';

export interface Props {
  title?: string;
  description?: string;
}

const { title = "Blocksy Components", description = "Premium component library for modern web applications" } = Astro.props;

// Get user session for SSR
let user = null;
let profile = null;

const supabase = createSupabaseSSR(Astro.cookies);

try {
  const { data: { user: authUser } } = await supabase.auth.getUser();
  user = authUser;
  
  if (user) {
    const { data: profileData } = await supabase
      .from('profiles')
      .select('*')
      .eq('id', user.id)
      .single();
    profile = profileData;
  }
} catch (e) {
  // Silent fail for auth - user just won't be authenticated
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  </head>
  <body class="min-h-screen overflow-x-hidden bg-background text-foreground antialiased">
    <ViewTransitions />
    <Header client:load data-theme="bright-dark" user={user} profile={profile} />
    <main>
      <slot />
    </main>
    <Footer client:load data-theme="bright-dark" />
  </body>
</html>