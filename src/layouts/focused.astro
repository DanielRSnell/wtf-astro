---
import "../styles/global.css";
import SEOMeta from "../components/seo/seo-meta.astro";

export interface Props {
  title?: string;
  description?: string;
  noindex?: boolean;
}

const { 
  title = "WooThatsFast", 
  description = "Premium WordPress resources and expert reviews",
  noindex = false 
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Meta Tags -->
    <SEOMeta 
      title={title}
      description={description}
      noindex={noindex}
    />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Umami Analytics -->
    <script defer src="https://analytics.umbral.ai/script.js" data-website-id="a7195ecb-0e35-4cea-8863-e5f2a26e8dc8"></script>
    
  </head>
  <body class="min-h-screen overflow-x-hidden bg-background text-foreground antialiased">
    <main>
      <slot />
    </main>
  </body>
</html>