---
import Layout from './base.astro';
import { ReviewHero } from '../components/review-hero.tsx';
import { FAQ } from '../components/ui/faq.tsx';
import { BreadcrumbInline } from '../components/ui/breadcrumb-inline.tsx';
import { generateBreadcrumbSchema } from '../components/ui/breadcrumb-wrapper.tsx';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  resource: CollectionEntry<'wordpress-resource'>;
  categoryName?: string;
}

const { resource, categoryName = "WordPress" } = Astro.props;
const { Content } = await resource.render();

// Calculate overall rating
const overallRating = resource.data.ratings && resource.data.ratings.length > 0
  ? resource.data.ratings.reduce((sum, r) => sum + r.value, 0) / resource.data.ratings.length
  : 0;

// Get review status specific content
const isComplete = resource.data.review_status === 'complete';
const isActive = resource.data.review_status === 'active';
const isBacklog = resource.data.review_status === 'backlog';
const isSkip = resource.data.review_status === 'skip';

// Prepare FAQ schema data if FAQs exist
const faqSchema = resource.data.faq && resource.data.faq.length > 0 ? {
  "@type": "FAQPage",
  mainEntity: resource.data.faq.map((item: { q: string, a: string }) => ({
    "@type": "Question",
    name: item.q,
    acceptedAnswer: {
      "@type": "Answer",
      text: item.a
    }
  }))
} : null;

// Get the primary category for URL
const primaryCategory = Array.isArray(resource.data.category) 
  ? resource.data.category[0] 
  : resource.data.category;

// Map category to proper URL path
const getCategoryUrl = (category: string) => {
  // Handle special cases where category doesn't match URL pattern
  if (category === 'themes') return '/wordpress-themes';
  if (category === 'hosting') return '/wordpress-hosting';
  if (category === 'seo') return '/wordpress-seo';
  if (category === 'performance') return '/wordpress-performance';
  if (category === 'security') return '/wordpress-security';
  if (category === 'forms') return '/wordpress-forms';
  if (category === 'blocks') return '/wordpress-blocks';
  if (category === 'pagebuilder') return '/wordpress-pagebuilder';
  if (category === 'admin') return '/wordpress-admin';
  if (category === 'automation') return '/wordpress-automation';
  if (category === 'woocommerce-themes') return '/woocommerce-themes';
  if (category === 'woocommerce-plugins') return '/woocommerce-plugins';
  if (category === 'woocommerce-hosting') return '/woocommerce-hosting';
  
  // Default: prefix with wordpress- if not already
  if (!category.startsWith('wordpress-') && !category.startsWith('woocommerce-')) {
    return `/wordpress-${category}`;
  }
  return `/${category}`;
};

// Generate breadcrumb items
const breadcrumbItems = [
  {
    name: 'Home',
    href: '/'
  },
  {
    name: categoryName,
    href: getCategoryUrl(primaryCategory)
  },
  {
    name: resource.data.title,
    current: true
  }
];

// Generate breadcrumb schema (showHome: false since Home is already in breadcrumbItems)
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://woothatsfast.com';
const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbItems, siteUrl, false);
---

<Layout 
  title={`${resource.data.title} Review (2025) - ${categoryName} | WooThatsFast`}
  description={resource.data.description || `In-depth review of ${resource.data.title}. Features, pricing, pros & cons, and expert analysis to help you make the right choice.`}
  image={resource.data.image?.src || "/open-graph.png"}
  canonical={`/${resource.data.category}/${resource.data.slug}`}
  schemaType="Review"
  schemaData={[
    breadcrumbSchema,
    {
      "@type": "Review",
      name: `${resource.data.title} Review`,
      reviewBody: resource.data.description,
      author: {
        "@type": "Person",
        name: resource.data.metadata?.author || "Daniel Snell"
      },
      datePublished: resource.data.metadata?.publishDate?.toISOString(),
      dateModified: resource.data.metadata?.lastUpdated?.toISOString() || resource.data.metadata?.publishDate?.toISOString(),
      itemReviewed: {
        "@type": "Product",
        name: resource.data.title,
        description: resource.data.subtitle,
        image: resource.data.image?.src || "/open-graph.png",
        brand: {
          "@type": "Brand",
          name: resource.data.title
        },
        offers: {
          "@type": "Offer",
          priceCurrency: "USD",
          price: resource.data.pricing?.startingPrice?.replace(/[^0-9.]/g, '') || "0",
          availability: "https://schema.org/InStock",
          url: resource.data.href
        }
      },
      reviewRating: {
        "@type": "Rating",
        ratingValue: overallRating.toFixed(1),
        bestRating: "5",
        worstRating: "1"
      }
    },
    ...(faqSchema ? [faqSchema] : [])
  ]}
  product={{
    price: resource.data.pricing?.startingPrice?.replace(/[^0-9.]/g, ''),
    currency: "USD",
    availability: "InStock"
  }}
>
  {/* Review Hero Section with Breadcrumb */}
  <ReviewHero
    client:load
    data-theme="bright-dark"
    title={resource.data.title}
    subtitle={resource.data.subtitle}
    description={resource.data.description}
    overallRating={overallRating}
    publishDate={resource.data.metadata?.publishDate?.toLocaleDateString()}
    author={resource.data.metadata?.author}
    badge={resource.data.badge}
    ratings={resource.data.ratings || []}
    alignment="left"
    breadcrumbItems={breadcrumbItems}
  />

  <article class="bg-background text-foreground" data-theme="bright-dark">
    <div class="container max-w-4xl mx-auto px-6 py-12">
      
      {/* Review Status Notice */}
      {!isComplete && (
        <div class={`mb-8 p-6 rounded-2xl border ${
          isActive ? 'bg-blue-500/5 border-blue-500/20' :
          isBacklog ? 'bg-yellow-500/5 border-yellow-500/20' :
          isSkip ? 'bg-red-500/5 border-red-500/20' :
          'bg-muted/5 border-border'
        }`}>
          <h2 class={`text-lg font-semibold mb-2 ${
            isActive ? 'text-blue-400' :
            isBacklog ? 'text-yellow-400' :
            isSkip ? 'text-red-400' :
            'text-foreground'
          }`}>
            {isActive && 'Review In Progress'}
            {isBacklog && 'Review Pending'}
            {isSkip && 'Review Not Planned'}
          </h2>
          
          {resource.data.review_reason && (
            <p class="text-muted-foreground mb-4">{resource.data.review_reason}</p>
          )}
          
          {/* Testing Progress for Active Reviews */}
          {isActive && resource.data.testing_progress && (
            <div class="space-y-4">
              <div class="flex items-center justify-between text-sm">
                <span class="text-muted-foreground">Progress</span>
                <span class="font-medium text-foreground">{resource.data.testing_progress.completion}%</span>
              </div>
              <div class="w-full bg-muted/20 rounded-full h-2">
                <div 
                  class="bg-primary h-2 rounded-full transition-all duration-500"
                  style={`width: ${resource.data.testing_progress.completion}%`}
                />
              </div>
              {resource.data.testing_progress.current_phase && (
                <p class="text-sm text-muted-foreground">
                  Current Phase: <span class="text-foreground">{resource.data.testing_progress.current_phase}</span>
                </p>
              )}
            </div>
          )}
          
          {/* Subscribe CTA */}
          {(isBacklog || isActive) && resource.data.subscribe_cta && (
            <div class="mt-6 p-4 bg-primary/5 rounded-xl">
              <p class="text-sm text-foreground mb-3">{resource.data.subscribe_cta}</p>
              <button class="px-4 py-2 bg-primary text-primary-foreground rounded-lg text-sm font-medium hover:bg-primary/90 transition-colors">
                Get Notified
              </button>
            </div>
          )}
        </div>
      )}

      {/* MDX Content with Fallback */}
      <div class="prose prose-lg max-w-none 
        prose-headings:text-foreground 
        prose-p:text-foreground/90 
        prose-strong:text-foreground 
        prose-em:text-foreground/90
        prose-a:text-primary hover:prose-a:text-primary/80 
        prose-blockquote:text-foreground/80 prose-blockquote:border-primary/30
        prose-code:text-foreground prose-code:bg-muted/20 prose-code:px-1 prose-code:py-0.5 prose-code:rounded
        prose-pre:bg-muted/10 prose-pre:text-foreground/90
        prose-ul:text-foreground/90 prose-li:text-foreground/90
        prose-ol:text-foreground/90
        prose-hr:border-border/50
        prose-table:text-foreground prose-th:text-foreground prose-td:text-foreground/90
        prose-h1:text-foreground prose-h2:text-foreground prose-h3:text-foreground prose-h4:text-foreground
        prose-lead:text-foreground/90">
        
        {/* Check if content is empty or placeholder */}
        {resource.data.useFallback || !resource.body || resource.body.trim() === '' ? (
          <div class="space-y-8">
            {/* Fallback Content Structure */}
            <div class="bg-primary/5 border border-primary/20 rounded-2xl p-8 text-center">
              <h2 class="text-2xl font-bold text-foreground mb-4">
                Full Review Coming Soon
              </h2>
              <p class="text-lg text-muted-foreground mb-6 max-w-2xl mx-auto">
                We're currently testing and evaluating {resource.data.title} to bring you a comprehensive, 
                in-depth review. Our team is analyzing performance, features, pricing, and real-world usage.
              </p>
              
              {/* Expected Content Preview */}
              <div class="grid md:grid-cols-2 gap-6 mt-8 text-left max-w-3xl mx-auto">
                <div class="bg-card/60 backdrop-blur-xl border border-border/20 rounded-xl p-6">
                  <h3 class="font-semibold text-foreground mb-3">What We're Testing</h3>
                  <ul class="space-y-2 text-sm text-muted-foreground">
                    <li class="flex items-start gap-2">
                      <span class="text-primary">•</span>
                      <span>Core features and functionality</span>
                    </li>
                    <li class="flex items-start gap-2">
                      <span class="text-primary">•</span>
                      <span>Performance and speed metrics</span>
                    </li>
                    <li class="flex items-start gap-2">
                      <span class="text-primary">•</span>
                      <span>User experience and interface</span>
                    </li>
                    <li class="flex items-start gap-2">
                      <span class="text-primary">•</span>
                      <span>Value for money analysis</span>
                    </li>
                  </ul>
                </div>
                
                <div class="bg-card/60 backdrop-blur-xl border border-border/20 rounded-xl p-6">
                  <h3 class="font-semibold text-foreground mb-3">What to Expect</h3>
                  <ul class="space-y-2 text-sm text-muted-foreground">
                    <li class="flex items-start gap-2">
                      <span class="text-primary">•</span>
                      <span>Detailed feature breakdown</span>
                    </li>
                    <li class="flex items-start gap-2">
                      <span class="text-primary">•</span>
                      <span>Real-world use cases</span>
                    </li>
                    <li class="flex items-start gap-2">
                      <span class="text-primary">•</span>
                      <span>Comparison with alternatives</span>
                    </li>
                    <li class="flex items-start gap-2">
                      <span class="text-primary">•</span>
                      <span>Expert recommendations</span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            
            {/* Quick Overview Section */}
            <div class="space-y-6">
              <h2 class="text-2xl font-bold text-foreground">Quick Overview</h2>
              <p class="text-foreground/90">
                {resource.data.description}
              </p>
              
              {resource.data.subtitle && (
                <p class="text-lg text-muted-foreground italic">
                  {resource.data.subtitle}
                </p>
              )}
              
              {/* Key Information */}
              <div class="bg-card/60 backdrop-blur-xl border border-border/20 rounded-xl p-6">
                <h3 class="font-semibold text-foreground mb-4">Key Information</h3>
                <dl class="grid sm:grid-cols-2 gap-4">
                  <div>
                    <dt class="text-sm text-muted-foreground">Category</dt>
                    <dd class="text-foreground font-medium">{categoryName}</dd>
                  </div>
                  {resource.data.metadata?.official_website && (
                    <div>
                      <dt class="text-sm text-muted-foreground">Official Website</dt>
                      <dd>
                        <a href={resource.data.metadata.official_website} 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="text-primary hover:text-primary/80 transition-colors">
                          Visit Website →
                        </a>
                      </dd>
                    </div>
                  )}
                  {resource.data.pricing?.startingPrice && (
                    <div>
                      <dt class="text-sm text-muted-foreground">Starting Price</dt>
                      <dd class="text-foreground font-medium">{resource.data.pricing.startingPrice}</dd>
                    </div>
                  )}
                  {resource.data.pricing?.free !== undefined && (
                    <div>
                      <dt class="text-sm text-muted-foreground">Free Version</dt>
                      <dd class="text-foreground font-medium">
                        {resource.data.pricing.free ? 'Available' : 'Premium Only'}
                      </dd>
                    </div>
                  )}
                </dl>
              </div>
            </div>
            
            {/* Notification Signup */}
            <div class="bg-gradient-to-br from-primary/10 via-transparent to-secondary/10 border border-primary/20 rounded-2xl p-8 text-center">
              <h3 class="text-xl font-semibold text-foreground mb-3">
                Get Notified When This Review is Ready
              </h3>
              <p class="text-muted-foreground mb-6">
                Be the first to read our comprehensive review of {resource.data.title}
              </p>
              <button class="px-6 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors">
                Notify Me When Available
              </button>
            </div>
          </div>
        ) : (
          <Content />
        )}
      </div>

      {/* Pros and Cons */}
      {(resource.data.pros || resource.data.cons) && (
        <div class="grid md:grid-cols-2 gap-8 mt-12">
          {resource.data.pros && (
            <div class="bg-green-500/5 border border-green-500/20 rounded-2xl p-6">
              <h3 class="text-lg font-semibold text-green-400 mb-4">Pros</h3>
              <ul class="space-y-2">
                {resource.data.pros.map((pro: string) => (
                  <li class="flex items-start gap-2 text-sm text-foreground">
                    <svg class="w-4 h-4 text-green-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    {pro}
                  </li>
                ))}
              </ul>
            </div>
          )}

          {resource.data.cons && (
            <div class="bg-red-500/5 border border-red-500/20 rounded-2xl p-6">
              <h3 class="text-lg font-semibold text-red-400 mb-4">Cons</h3>
              <ul class="space-y-2">
                {resource.data.cons.map((con: string) => (
                  <li class="flex items-start gap-2 text-sm text-foreground">
                    <svg class="w-4 h-4 text-red-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                    {con}
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      )}

      {/* Pricing Plans */}
      {resource.data.pricingPlans && resource.data.pricingPlans.length > 0 ? (
        <div class="mt-12">
          <h3 class="text-2xl font-bold text-foreground mb-6">Pricing Plans</h3>
          <div class="space-y-4 max-w-3xl">
            {resource.data.pricingPlans.map((plan) => (
              <div class={`relative overflow-hidden rounded-2xl bg-card/60 backdrop-blur-xl border ${plan.recommended ? 'border-primary/30' : 'border-border/20'} hover:border-primary/40 transition-all duration-300`}>
                <div class="p-6">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
                    {/* Left Section: Name, Price, and Badges */}
                    <div class="flex-1">
                      <div class="flex items-start gap-3 mb-3">
                        <div>
                          {/* Plan Name and Price */}
                          <div class="flex items-baseline gap-3 mb-2">
                            <h4 class="text-lg font-semibold text-foreground">{plan.name}</h4>
                            <span class="text-2xl font-bold text-primary">{plan.price}</span>
                            {plan.billingCycle && (
                              <span class="text-sm text-muted-foreground">/{plan.billingCycle}</span>
                            )}
                          </div>
                          
                          {/* Badges */}
                          <div class="flex items-center gap-2">
                            {plan.recommended && (
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full bg-primary/20 text-xs font-semibold text-primary">
                                RECOMMENDED
                              </span>
                            )}
                            {plan.badge && (
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full bg-primary/10 text-xs font-medium text-primary">
                                {plan.badge}
                              </span>
                            )}
                          </div>
                        </div>
                      </div>
                      
                      {/* Features List */}
                      <ul class="grid sm:grid-cols-2 gap-x-6 gap-y-2 mt-4">
                        {plan.features.map((feature: string) => (
                          <li class="flex items-start gap-2 text-sm text-foreground/90">
                            <svg class="w-4 h-4 text-primary mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                            {feature}
                          </li>
                        ))}
                      </ul>
                    </div>
                    
                    {/* Right Section: CTA Button */}
                    {plan.href && (
                      <div class="sm:flex-shrink-0">
                        <a 
                          href={plan.href}
                          class={`inline-flex items-center px-5 py-2.5 rounded-lg font-medium transition-colors ${
                            plan.recommended 
                              ? 'bg-primary text-primary-foreground hover:bg-primary/90' 
                              : 'bg-card border border-border hover:bg-muted'
                          }`}
                          target="_blank"
                          rel="noopener noreferrer"
                        >
                          Get Started
                          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                          </svg>
                        </a>
                      </div>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ) : resource.data.pricing && (
        <div class="bg-card/60 backdrop-blur-xl border border-border/30 rounded-2xl p-6 mt-8">
          <h3 class="text-lg font-semibold text-foreground mb-4">Pricing</h3>
          <div class="space-y-2">
            <div class="flex items-center justify-between">
              <span class="text-sm text-muted-foreground">Free Version</span>
              <span class="text-sm font-medium text-foreground">
                {resource.data.pricing.free ? 'Available' : 'Not Available'}
              </span>
            </div>
            {resource.data.pricing.startingPrice && (
              <div class="flex items-center justify-between">
                <span class="text-sm text-muted-foreground">Starting Price</span>
                <span class="text-sm font-medium text-primary">{resource.data.pricing.startingPrice}</span>
              </div>
            )}
            {resource.data.pricing.priceNote && (
              <p class="text-xs text-muted-foreground mt-2">{resource.data.pricing.priceNote}</p>
            )}
          </div>
        </div>
      )}

      {/* FAQ Section */}
      {resource.data.faq && resource.data.faq.length > 0 && (
        <FAQ 
          client:visible
          items={resource.data.faq} 
          title="Frequently Asked Questions"
          className="mt-16"
        />
      )}

    </div>
  </article>
</Layout>