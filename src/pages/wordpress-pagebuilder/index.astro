---
export const prerender = false;

import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/base.astro';
import { ResourceDirectory } from '@/components/resource-directory.tsx';

// Get all pagebuilder resources from the wordpress-resource collection
const pagebuilderResources = await getCollection('wordpress-resource', (resource) => {
  const categories = Array.isArray(resource.data.category) 
    ? resource.data.category 
    : [resource.data.category];
  return categories.includes('wordpress-pagebuilder') || categories.includes('pagebuilder');
});

// Get the category data
const categories = await getCollection('wordpress-category');
const categoryData = categories.find(cat => cat.data.category === 'wordpress-pagebuilder');

// Get pagebuilder-related blog posts
const pagebuilderPosts = await getCollection('blog', (post) => {
  return post.data.tags?.some(tag => 
    tag.toLowerCase().includes('builder') || 
    tag.toLowerCase().includes('elementor') ||
    tag.toLowerCase().includes('divi') ||
    tag.toLowerCase().includes('bricks') ||
    pagebuilderResources.some(builder => 
      post.data.title.toLowerCase().includes(builder.data.title.toLowerCase()) ||
      post.data.tags?.some(postTag => postTag.toLowerCase().includes(builder.data.title.toLowerCase()))
    )
  );
});

const pageTitle = 'Best WordPress Page Builders (2025) - Reviews & Comparisons | WooThatsFast';
const pageDescription = 'Discover the best WordPress page builders of 2025. Expert reviews and comparisons of Elementor, Divi, Bricks Builder, Oxygen, and modern visual development platforms. Build stunning WordPress sites with drag-and-drop page builders.';

// Create breadcrumb schema
const breadcrumbSchema = {
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@id": "https://woothatsfast.com",
        "name": "Home"
      }
    },
    {
      "@type": "ListItem",
      "position": 2,
      "item": {
        "@id": "https://woothatsfast.com/wordpress-pagebuilder",
        "name": "WordPress Page Builders"
      }
    }
  ]
};

// Create CollectionPage schema with Product listings
const collectionPageSchema = {
  "@type": "CollectionPage",
  "name": pageTitle,
  "description": pageDescription,
  "url": "https://woothatsfast.com/wordpress-pagebuilder",
  "breadcrumb": breadcrumbSchema,
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": pagebuilderResources.length,
    "itemListElement": pagebuilderResources.slice(0, 10).map((resource, index) => ({
      "@type": "Product",
      "position": index + 1,
      "url": `https://woothatsfast.com/wordpress-pagebuilder/${resource.slug}`,
      "name": resource.data.title,
      "description": resource.data.description,
      "category": "WordPress Page Builders",
      "aggregateRating": resource.data.ratings ? {
        "@type": "AggregateRating",
        "ratingValue": Object.values(resource.data.ratings).reduce((a, b) => a + b, 0) / Object.keys(resource.data.ratings).length,
        "bestRating": "5",
        "worstRating": "1",
        "ratingCount": "1"
      } : undefined
    }))
  }
};
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  image="/open-graph.png"
  schemaType="CollectionPage"
  schemaData={collectionPageSchema}
>
  <ResourceDirectory
    client:load
    data-theme="bright-dark"
    category="pagebuilder"
    title="WordPress Page Builders"
    description="Visual drag-and-drop builders for creating stunning WordPress sites"
    resources={pagebuilderResources}
    relatedPosts={pagebuilderPosts}
    baseUrl="/wordpress-pagebuilder"
    categoryData={categoryData}
  />
</Layout>