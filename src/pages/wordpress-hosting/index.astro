---
export const prerender = false;

import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/base.astro';
import { ResourceDirectory } from '@/components/resource-directory.tsx';

// Get all hosting resources from the wordpress-resource collection
const hostingResources = await getCollection('wordpress-resource', (resource) => {
  const categories = Array.isArray(resource.data.category) 
    ? resource.data.category 
    : [resource.data.category];
  return categories.includes('wordpress-hosting') || categories.includes('hosting');
});

// Get the category data
const categories = await getCollection('wordpress-category');
const categoryData = categories.find(cat => cat.data.category === 'wordpress-hosting');

// Get hosting-related blog posts
const hostingPosts = await getCollection('blog', (post) => {
  return post.data.tags?.some(tag => 
    tag.toLowerCase().includes('hosting') || 
    tag.toLowerCase().includes('server') ||
    tag.toLowerCase().includes('performance') ||
    hostingResources.some(hosting => 
      post.data.title.toLowerCase().includes(hosting.data.title.toLowerCase()) ||
      post.data.tags?.some(postTag => postTag.toLowerCase().includes(hosting.data.title.toLowerCase()))
    )
  );
});

const pageTitle = "Best WordPress Hosting (2025) - Reviews & Comparisons | WooThatsFast";
const pageDescription = "Compare the best WordPress hosting providers of 2025. In-depth reviews of performance, uptime, support, and pricing. Find the perfect hosting for your WordPress site with expert recommendations.";

// Create breadcrumb schema
const breadcrumbSchema = {
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@id": "https://woothatsfast.com",
        "name": "Home"
      }
    },
    {
      "@type": "ListItem",
      "position": 2,
      "item": {
        "@id": "https://woothatsfast.com/wordpress-hosting",
        "name": "WordPress Hosting"
      }
    }
  ]
};

// Create CollectionPage schema with Product listings
const collectionPageSchema = {
  "@type": "CollectionPage",
  "name": pageTitle,
  "description": pageDescription,
  "url": "https://woothatsfast.com/wordpress-hosting",
  "breadcrumb": breadcrumbSchema,
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": hostingResources.length,
    "itemListElement": hostingResources.slice(0, 10).map((resource, index) => ({
      "@type": "Product",
      "position": index + 1,
      "url": `https://woothatsfast.com/wordpress-hosting/${resource.slug}`,
      "name": resource.data.title,
      "description": resource.data.description,
      "category": "WordPress Hosting",
      "aggregateRating": resource.data.ratings ? {
        "@type": "AggregateRating",
        "ratingValue": Object.values(resource.data.ratings).reduce((a, b) => a + b, 0) / Object.keys(resource.data.ratings).length,
        "bestRating": "5",
        "worstRating": "1",
        "ratingCount": "1"
      } : undefined
    }))
  }
};
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  image="/open-graph.png"
  schemaType="CollectionPage"
  schemaData={collectionPageSchema}
>
  <ResourceDirectory
    client:load
    data-theme="bright-dark"
    category="hosting"
    title="WordPress Hosting"
    description="Fast, reliable hosting solutions for WordPress"
    resources={hostingResources}
    relatedPosts={hostingPosts}
    baseUrl="/wordpress-hosting"
    categoryData={categoryData}
  />
</Layout>