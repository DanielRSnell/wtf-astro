---
import Layout from '@layouts/base.astro';
import { createSupabaseSSR } from '@/lib/supabase-ssr';

export const prerender = false;

// Get the id from URL params (could be username or UUID)
const { id } = Astro.params;

// Server-side profile lookup
let profile = null;
let user = null;
let error = null;
let isOwnProfile = false;

const supabase = createSupabaseSSR(Astro.cookies);

try {
  // Check current user auth status
  const { data: { user: currentUser }, error: authError } = await supabase.auth.getUser();
  
  if (currentUser) {
    user = currentUser;
  }
  
  // Look up profile by username first, then by UUID if not found
  let profileQuery = supabase
    .from('profiles')
    .select('*');
    
  // Check if the id looks like a UUID
  const isUUID = /^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$/i.test(id);
  
  if (isUUID) {
    profileQuery = profileQuery.eq('id', id);
  } else {
    profileQuery = profileQuery.eq('username', id);
  }
  
  const { data: profileData, error: profileError } = await profileQuery.single();
  
  console.log('Profile lookup:', { id, isUUID, found: !!profileData, error: profileError?.message });
  
  if (profileError || !profileData) {
    error = 'Profile not found';
  } else {
    profile = profileData;
    
    // Check if this is the current user's own profile
    if (user && profile.id === user.id) {
      isOwnProfile = true;
    }
    
    // If accessed by UUID but profile has username, redirect to semantic URL
    if (isUUID && profile.username && !isOwnProfile) {
      return Astro.redirect(`/user/${profile.username}`);
    }
  }
  
} catch (e) {
  console.error('Profile lookup error:', e);
  error = 'Error loading profile';
}

console.log('Final profile state:', { 
  hasProfile: !!profile, 
  isOwnProfile,
  username: profile?.username,
  error 
});
---

<Layout title={profile ? `${profile.full_name || profile.username} - Profile` : 'Profile Not Found'}>
  <div class="relative min-h-screen pt-24 pb-16 bg-background text-foreground overflow-hidden" data-theme="bright-dark">
    <!-- Dot Pattern Background -->
    <div class="absolute inset-0 h-full w-full [mask-image:radial-gradient(600px_circle_at_center,white,transparent)]">
      <div class="absolute inset-0 opacity-80">
        <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="dot-pattern-profile" x="0" y="0" width="30" height="30" patternUnits="userSpaceOnUse">
              <circle cx="15" cy="15" r="2" fill="currentColor" class="text-primary"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#dot-pattern-profile)"/>
        </svg>
      </div>
    </div>
    
    <!-- Gradient Overlay -->
