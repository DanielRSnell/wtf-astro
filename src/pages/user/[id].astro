    <!-- Blur elements for depth -->
    <div class="absolute -top-40 -right-40 h-80 w-80 rounded-full bg-primary/5 blur-3xl" />
    <div class="absolute -bottom-40 left-1/2 transform -translate-x-1/2 h-96 w-[32rem] rounded-full bg-primary/15 blur-3xl" />

    <div class="container relative z-10 mx-auto px-6">
