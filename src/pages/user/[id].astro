          </div>
        ) : (
          <!-- Profile Content -->
          <>
            <!-- Back Navigation -->
            <div class="mb-8 pt-4">
              <a href="/" class="group inline-flex items-center space-x-2 text-muted-foreground/80 hover:text-foreground transition-all duration-200 hover:scale-105">
