                  <p class="text-lg text-muted-foreground/90 font-medium">
                    {isOwnProfile ? 'Manage your account and view your activity' : `@${profile?.username}`}
                  </p>
                </div>
                {isOwnProfile && (
                  <div class="group relative overflow-hidden rounded-xl bg-card/60 backdrop-blur-xl border border-border/20 hover:border-primary/30 transition-all duration-300">
