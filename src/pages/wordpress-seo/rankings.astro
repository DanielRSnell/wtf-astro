---
export const prerender = false;

import { getCollection } from 'astro:content';
import Layout from '../../layouts/base.astro';
import { ResourceRanking } from '@/components/resource-ranking.tsx';

// Get all SEO resources from the wordpress-resource collection
const seoResources = await getCollection('wordpress-resource', (resource) => {
  const categories = Array.isArray(resource.data.category) 
    ? resource.data.category 
    : [resource.data.category];
  return categories.includes('seo') || categories.includes('wordpress-seo');
});

const pageTitle = "Best WordPress SEO Plugins 2025 - Expert Rankings | WooThatsFast";
const pageDescription = "Top-rated WordPress SEO plugins ranked by features, performance, and effectiveness. Find the perfect SEO solution to boost your WordPress site's search visibility.";

// Create breadcrumb schema
const breadcrumbSchema = {
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@id": "https://woothatsfast.com",
        "name": "Home"
      }
    },
    {
      "@type": "ListItem",
      "position": 2,
      "item": {
        "@id": "https://woothatsfast.com/wordpress-seo",
        "name": "WordPress SEO"
      }
    },
    {
      "@type": "ListItem",
      "position": 3,
      "item": {
        "@id": "https://woothatsfast.com/wordpress-seo/rankings",
        "name": "Rankings"
      }
    }
  ]
};

// Filter to only SEO resources with ratings and sort by average rating
const rankedSEO = seoResources
  .filter(r => r.data.ratings && r.data.ratings.length > 0)
  .map(resource => {
    const ratings = resource.data.ratings || [];
    const avgRating = ratings.length > 0 
      ? ratings.reduce((sum, rating) => sum + rating.value, 0) / ratings.length
      : 0;
    
    return {
      ...resource,
      avgRating
    };
  })
  .sort((a, b) => b.avgRating - a.avgRating)
  .slice(0, 10); // Top 10 SEO plugins

// Create CollectionPage schema with ranked products
const collectionPageSchema = {
  "@type": "CollectionPage",
  "name": pageTitle,
  "description": pageDescription,
  "url": "https://woothatsfast.com/wordpress-seo/rankings",
  "breadcrumb": breadcrumbSchema,
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": rankedSEO.length,
    "itemListElement": rankedSEO.map((resource, index) => ({
      "@type": "Product",
      "position": index + 1,
      "url": `https://woothatsfast.com/wordpress-seo/${resource.slug}`,
      "name": resource.data.title,
      "description": resource.data.description,
      "category": "WordPress SEO",
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": resource.avgRating.toFixed(1),
        "bestRating": "5",
        "worstRating": "1",
        "ratingCount": resource.data.ratings.length
      }
    }))
  }
};
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  image="/open-graph.png"
  schemaType="CollectionPage"
  schemaData={collectionPageSchema}
>
  <ResourceRanking
    client:load
    data-theme="bright-dark"
    title="Top WordPress SEO Plugins 2025"
    description="The best WordPress SEO plugins ranked by features, performance impact, and effectiveness in improving search rankings."
    resources={rankedSEO}
  />
</Layout>