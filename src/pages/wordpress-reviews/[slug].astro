---
export const prerender = true;
import { getEntry, render, getCollection } from 'astro:content';
import Layout from '@layouts/base.astro';
import { ReviewHero } from '@components/review-hero.tsx';

export async function getStaticPaths() {
  const reviews = await getCollection('wordpress-review');
  return reviews.map((review) => ({
    params: { slug: review.slug },
    props: { review },
  }));
}

// 1. Get the review from props
const { review } = Astro.props;

// 2. Redirect if the review does not exist
if (!review) {
  return Astro.redirect("/404");
}

// 4. Render the entry to HTML
const { Content } = await render(review);

// Calculate overall rating from individual ratings
const overallRating = review.data.overallRating || 
  (review.data.ratings.reduce((sum, rating) => sum + rating.value, 0) / review.data.ratings.length);
---

<Layout title={review.data.title} description={review.data.description}>
  <article class="bg-background text-foreground" data-theme="bright-dark">
    {/* Review Hero Section */}
    <ReviewHero 
      client:load
      data-theme="bright-dark"
      title={review.data.title}
      subtitle={review.data.subtitle}
      description={review.data.description}
      overallRating={overallRating}
      totalReviews={review.data.totalReviews}
      publishDate={new Date(review.data.metadata.publishDate).toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
      })}
      author={review.data.metadata.author}
      badge={review.data.badge}
      ratings={review.data.ratings}
      alignment="left"
    />

    {/* Quick Overview Section */}
    <section class="container max-w-6xl mx-auto px-6 py-16">
      <div class="grid lg:grid-cols-3 gap-8 mb-16">
        <div class="lg:col-span-2">
          <h2 class="text-2xl font-bold mb-4">Quick Overview</h2>
          <div class="prose prose-lg prose-invert">
            <Content />
          </div>
        </div>
        <div class="space-y-6">
          {/* Rating Breakdown Card */}
          <div class="rounded-2xl bg-card/60 backdrop-blur-xl border border-border/20 p-6">
            <h3 class="text-lg font-medium mb-4">Rating Breakdown</h3>
            <div class="space-y-4">
              {review.data.ratings.map((rating) => (
                <div key={rating.name} class="flex items-center justify-between">
                  <span class="text-sm font-medium">{rating.name}</span>
                  <div class="flex items-center gap-2">
                    <div class="flex">
                      {[1, 2, 3, 4, 5].map((star) => (
                        <svg 
                          key={star}
                          class={`w-4 h-4 ${star <= rating.value ? 'text-yellow-500' : 'text-muted-foreground/30'}`}
                          fill="currentColor" 
                          viewBox="0 0 20 20"
                        >
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                    <span class="text-sm font-semibold">{rating.value}</span>
                  </div>
                </div>
              ))}
            </div>
          </div>
          
          {/* Overall Score Card */}
          <div class="rounded-2xl bg-gradient-to-br from-primary/10 to-secondary/10 backdrop-blur-xl border border-primary/20 p-6 text-center">
            <div class="text-4xl font-bold text-primary mb-2">{overallRating.toFixed(1)}</div>
            <div class="text-sm text-muted-foreground">Overall Rating</div>
            <div class="flex justify-center mt-2">
              {[1, 2, 3, 4, 5].map((star) => (
                <svg 
                  key={star}
                  class={`w-5 h-5 ${star <= Math.round(overallRating) ? 'text-yellow-500' : 'text-muted-foreground/30'}`}
                  fill="currentColor" 
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Detailed Analysis Section */}
    <section class="bg-muted/20 py-16">
      <div class="container max-w-6xl mx-auto px-6">
        <h2 class="text-3xl font-bold text-center mb-12">Detailed Analysis</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {review.data.ratings.map((rating) => (
            <div key={rating.name} class="rounded-2xl bg-card/60 backdrop-blur-xl border border-border/20 p-6">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold">{rating.name}</h3>
                <div class="flex items-center gap-1">
                  <span class="text-2xl font-bold text-primary">{rating.value}</span>
                  <span class="text-muted-foreground">/5</span>
                </div>
              </div>
              <div class="flex mb-3">
                {[1, 2, 3, 4, 5].map((star) => (
                  <svg 
                    key={star}
                    class={`w-5 h-5 ${star <= rating.value ? 'text-yellow-500' : 'text-muted-foreground/30'}`}
                    fill="currentColor" 
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <p class="text-sm text-muted-foreground">
                {rating.name === 'Design Quality' && 'Modern, professional designs that work across industries and use cases.'}
                {rating.name === 'Performance' && 'Fast loading times, optimized code, and excellent Core Web Vitals scores.'}
                {rating.name === 'Customization' && 'Flexible customization options with intuitive controls and extensive settings.'}
                {rating.name === 'Support' && 'Responsive customer support, comprehensive documentation, and active community.'}
                {rating.name === 'Value' && 'Excellent value for money considering features, quality, and ongoing updates.'}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Personal Thoughts Section */}
    <section class="container max-w-4xl mx-auto px-6 py-16">
      <div class="rounded-3xl bg-gradient-to-br from-card/80 to-card/40 backdrop-blur-xl border border-border/20 p-8 md:p-12">
        <div class="flex items-center gap-4 mb-6">
          <div class="h-12 w-12 rounded-full bg-primary/10 border border-primary/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold">Personal Thoughts & Experience</h2>
            <p class="text-muted-foreground">Our honest take after extensive testing</p>
          </div>
        </div>
        
        <div class="prose prose-lg prose-invert max-w-none">
          <p class="text-lg leading-relaxed mb-6">
            After spending weeks testing this theme across different projects and use cases, here's what stood out to us most...
          </p>
          
          <div class="grid md:grid-cols-2 gap-8 my-8">
            <div>
              <h4 class="text-lg font-semibold text-green-400 mb-3 flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                What We Loved
              </h4>
              <ul class="space-y-2 text-sm">
                <li>Exceptional build quality and attention to detail</li>
                <li>Lightning-fast performance out of the box</li>
                <li>Intuitive customization interface</li>
                <li>Regular updates and new features</li>
              </ul>
            </div>
            
            <div>
              <h4 class="text-lg font-semibold text-orange-400 mb-3 flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
                Areas for Improvement
              </h4>
              <ul class="space-y-2 text-sm">
                <li>Learning curve for advanced features</li>
                <li>Some plugins may require additional setup</li>
                <li>Premium add-ons sold separately</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Final Verdict */}
    <section class="bg-gradient-to-br from-primary/5 via-transparent to-secondary/5 py-16">
      <div class="container max-w-4xl mx-auto px-6 text-center">
        <div class="rounded-3xl bg-card/60 backdrop-blur-xl border border-border/20 p-8 md:p-12">
          <div class="inline-flex items-center gap-2 bg-primary/10 rounded-full px-4 py-2 mb-6">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span class="text-sm font-medium text-primary">Final Verdict</span>
          </div>
          
          <h2 class="text-3xl font-bold mb-6">
            {overallRating >= 4.5 ? 'Highly Recommended' : 
             overallRating >= 4.0 ? 'Recommended' : 
             overallRating >= 3.5 ? 'Good Choice' : 'Consider Alternatives'}
          </h2>
          
          <p class="text-lg text-muted-foreground mb-8 leading-relaxed">
            This theme delivers exceptional value with its combination of design quality, 
            performance, and ease of use. Perfect for businesses and professionals looking 
            for a reliable, future-proof solution.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/#resource-hub" 
              class="inline-flex items-center gap-2 bg-primary text-primary-foreground px-6 py-3 rounded-xl font-medium hover:bg-primary/90 transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Back to Resource Hub
            </a>
            <button class="inline-flex items-center gap-2 bg-card/60 backdrop-blur-xl border border-border/20 px-6 py-3 rounded-xl font-medium hover:bg-card/80 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z" />
              </svg>
              Share Review
            </button>
          </div>
        </div>
      </div>
    </section>
  </article>
</Layout>