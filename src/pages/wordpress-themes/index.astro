---
export const prerender = true;

import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/base.astro';
import { ResourceDirectory } from '@/components/resource-directory.tsx';


// Get all themes from the wordpress-resource collection
const themeResources = await getCollection('wordpress-resource', (resource) => {
  return resource.data.category === 'themes';
});

// Get theme-related blog posts
const themePosts = await getCollection('blog', (post) => {
  return post.data.tags?.some(tag => 
    tag.toLowerCase().includes('theme') || 
    tag.toLowerCase().includes('wordpress') ||
    themeResources.some(theme => 
      post.data.title.toLowerCase().includes(theme.data.title.toLowerCase()) ||
      post.data.tags?.some(postTag => postTag.toLowerCase().includes(theme.data.title.toLowerCase()))
    )
  );
});

const pageTitle = "Best WordPress Themes (2024) - Reviews & Comparisons | Blocksy Components";
const pageDescription = "Explore 50+ premium WordPress themes for 2024. In-depth reviews of design, performance, features, and pricing. Find the perfect theme for your WordPress site with expert recommendations.";

// Create breadcrumb schema
const breadcrumbSchema = {
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@id": "https://blocksy-components.com",
        "name": "Home"
      }
    },
    {
      "@type": "ListItem",
      "position": 2,
      "item": {
        "@id": "https://blocksy-components.com/wordpress-themes",
        "name": "WordPress Themes"
      }
    }
  ]
};

// Create CollectionPage schema with Product listings
const collectionPageSchema = {
  "@type": "CollectionPage",
  "name": pageTitle,
  "description": pageDescription,
  "url": "https://blocksy-components.com/wordpress-themes",
  "breadcrumb": breadcrumbSchema,
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": themeResources.length,
    "itemListElement": themeResources.slice(0, 10).map((resource, index) => ({
      "@type": "Product",
      "position": index + 1,
      "url": `https://blocksy-components.com/wordpress-themes/${resource.slug}`,
      "name": resource.data.title,
      "description": resource.data.description,
      "category": "WordPress Themes",
      "aggregateRating": resource.data.ratings ? {
        "@type": "AggregateRating",
        "ratingValue": Object.values(resource.data.ratings).reduce((a, b) => a + b, 0) / Object.keys(resource.data.ratings).length,
        "bestRating": "5",
        "worstRating": "1",
        "ratingCount": "1"
      } : undefined
    }))
  }
};
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  image="/open-graph.png"
  schemaType="CollectionPage"
  schemaData={collectionPageSchema}
>
  <ResourceDirectory
    client:load
    data-theme="bright-dark"
    category="themes"
    title="WordPress Themes"
    description="Professional WordPress themes for every type of website"
    resources={themeResources}
    relatedPosts={themePosts}
    baseUrl="/wordpress-themes"
  />
</Layout>