---
export const prerender = true;
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '@/layouts/base.astro';
import { ServiceHero } from '@/components/service-hero';
import { BeforeAfterCards } from '@/components/ui/before-after-cards';
import { Button } from '@/components/ui/button';
import { Card } from '@/components/ui/card';
import { Check, Rocket, Zap, TrendingUp, Target, Shield, Code, Smartphone, Users, Heart } from 'lucide-react';

export async function getStaticPaths() {
  const services = await getCollection('services', ({ data }) => !data.draft);
  
  return services.map((service) => ({
    params: { slug: service.data.slug },
    props: { service }
  }));
}

type Props = {
  service: CollectionEntry<'services'>;
};

const { service } = Astro.props;
const { Content } = await service.render();

// Icon mapping
const iconMap: Record<string, any> = {
  'rocket': Rocket,
  'zap': Zap,
  'trending-up': TrendingUp,
  'target': Target,
  'shield': Shield,
  'code': Code,
  'smartphone': Smartphone,
  'users': Users,
  'heart': Heart
};

const getIcon = (iconName: string) => {
  return iconMap[iconName] || Rocket;
};
---

<Layout title={service.data.title}>
  <!-- Hero Section using ServiceHero component -->
  <ServiceHero 
    client:load 
    data-theme="bright-dark" 
    title={service.data.hero.title}
    subtitle={service.data.hero.subtitle}
    badge={service.data.hero.badge}
    primaryCta={{ text: "View Packages", href: "#packages" }}
    secondaryCta={{ text: "Get Free Consultation", href: "/contact" }}
  />

  <!-- Packages Section -->
  {service.data.packages && (
    <section id="packages" class="bg-background py-20" data-theme="bright-dark">
      <div class="container max-w-7xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4 text-foreground">Service Packages</h2>
          <p class="text-lg text-muted-foreground">Choose the package that fits your needs</p>
        </div>
        
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {service.data.packages.map((pkg) => (
            <div class={`group relative overflow-hidden rounded-3xl bg-card/80 backdrop-blur-xl border ${pkg.highlighted ? 'border-primary/40 shadow-2xl shadow-primary/20 scale-105' : 'border-border/30'} hover:border-primary/40 transition-all duration-500 hover:shadow-2xl hover:shadow-primary/20 p-10`}>
              {/* Enhanced gradient backgrounds */}
              <div class="absolute inset-0">
                <div class={`absolute inset-0 bg-gradient-to-br ${pkg.highlighted ? 'from-primary/10 via-transparent to-secondary/10' : 'from-primary/5 via-transparent to-secondary/5'}`}></div>
                <div class="absolute inset-0 bg-gradient-to-t from-card/60 via-transparent to-transparent"></div>
              </div>
              
              {pkg.highlighted && (
                <>
                  <div class="absolute -top-px left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary to-transparent"></div>
                  <div class="absolute top-4 right-4 px-3 py-1 rounded-full bg-primary/20 backdrop-blur-sm border border-primary/30">
                    <span class="text-xs font-semibold text-primary uppercase tracking-wider">Popular</span>
                  </div>
                </>
              )}
              
              <div class="relative z-10">
                <h3 class="text-2xl font-bold mb-3 text-foreground">{pkg.name}</h3>
                <div class="flex items-baseline gap-2 mb-2">
                  <span class="text-4xl font-bold bg-gradient-to-r from-primary to-primary/70 bg-clip-text text-transparent">{pkg.price}</span>
                </div>
                {pkg.loadTime && (
                  <div class="text-sm text-primary/80 font-medium mb-6">{pkg.loadTime}</div>
                )}
                <p class="text-muted-foreground mb-8 leading-relaxed">{pkg.description}</p>
                
                <ul class="space-y-3 mb-8">
                  {pkg.features.map((feature) => (
                    <li class="flex items-start gap-2">
                      <Check className="h-5 w-5 text-primary mt-0.5 flex-shrink-0" />
                      <span class="text-sm text-muted-foreground">{feature}</span>
                    </li>
                  ))}
                </ul>
                
                <button 
                  className="relative z-20 w-full px-8 py-3 rounded-full font-semibold transition-all duration-300 hover:scale-[1.02] bg-primary text-primary-foreground shadow-lg hover:shadow-xl hover:bg-primary/90"
                >
                  {pkg.buttonText}
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Process Section -->
  {service.data.process && (
    <section class="bg-background py-20" data-theme="bright-dark">
      <div class="container max-w-5xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4 text-foreground">How It Works</h2>
        </div>
        
        <div class="space-y-6">
          {service.data.process.map((step) => (
            <div class="group relative overflow-hidden rounded-2xl bg-card/80 backdrop-blur-xl border border-border/30 hover:border-primary/40 transition-all duration-500 hover:shadow-2xl hover:shadow-primary/20 p-8">
              {/* Background gradient for depth */}
              <div class="absolute inset-0">
                <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-secondary/5"></div>
                <div class="absolute inset-0 bg-gradient-to-t from-card/40 via-transparent to-transparent"></div>
              </div>
              
              <div class="relative z-10 flex gap-6">
                <div class="flex h-14 w-14 items-center justify-center rounded-2xl bg-gradient-to-br from-primary/20 to-primary/10 backdrop-blur-sm border border-primary/30 flex-shrink-0 shadow-lg shadow-primary/10">
                  <span class="text-2xl font-bold text-primary">{step.step}</span>
                </div>
                <div>
                  <h3 class="text-xl font-semibold mb-2 text-foreground group-hover:text-primary transition-colors duration-300">{step.title}</h3>
                  <p class="text-muted-foreground leading-relaxed">{step.description}</p>
                </div>
              </div>
              
              {/* Hover accent line */}
              <div class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-primary/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Testimonials Section -->
  {service.data.testimonials && (
    <section class="bg-background py-20" data-theme="bright-dark">
      <div class="container max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4 text-foreground">Client Results</h2>
          <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
            Client names and businesses are redacted to protect their competitive advantage. 
            E-commerce is highly competitive and client privacy is essential to our business.
          </p>
        </div>
        
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {service.data.testimonials.map((testimonial) => (
            <div class="group relative overflow-hidden rounded-2xl bg-card/80 backdrop-blur-xl border border-border/30 hover:border-primary/40 transition-all duration-500 hover:shadow-2xl hover:shadow-primary/20 p-8">
              {/* Background gradients */}
              <div class="absolute inset-0">
                <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-secondary/5"></div>
                <div class="absolute inset-0 bg-gradient-to-t from-card/40 via-transparent to-transparent"></div>
              </div>
              
              <div class="relative z-10">
                {/* Quote mark */}
                <div class="absolute -top-2 -left-2 text-6xl text-primary/10 font-serif">"</div>
                
                {testimonial.metric && (
                  <div class="text-3xl font-bold bg-gradient-to-r from-primary to-primary/70 bg-clip-text text-transparent mb-4">{testimonial.metric}</div>
                )}
                <blockquote class="text-muted-foreground leading-relaxed mb-6 italic">"{testimonial.quote}"</blockquote>
                <div class="border-t border-border/30 pt-4">
                  <div class="font-semibold text-foreground">
                    <span class="inline-block bg-foreground/10 rounded px-2 py-0.5 font-mono text-sm">[REDACTED]</span>
                  </div>
                  {testimonial.business && (
                    <div class="text-sm text-primary/70 font-medium mt-1">{testimonial.business}</div>
                  )}
                </div>
              </div>
              
              {/* Hover accent */}
              <div class="absolute inset-x-0 bottom-0 h-px bg-gradient-to-r from-transparent via-primary/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Content Section -->
  <section class="bg-background py-20" data-theme="bright-dark">
    <div class="container max-w-4xl">
      <div class="prose prose-lg max-w-none prose-headings:text-foreground prose-p:text-muted-foreground prose-strong:text-foreground prose-ul:text-muted-foreground prose-li:text-muted-foreground prose-blockquote:text-muted-foreground prose-h2:text-foreground prose-h3:text-foreground prose-h4:text-foreground">
        <Content />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-background py-20" data-theme="bright-dark">
    <div class="container max-w-4xl">
      <div class="group relative overflow-hidden rounded-3xl bg-card/60 backdrop-blur-xl border border-border/20 hover:border-primary/30 transition-all duration-500 hover:shadow-2xl hover:shadow-primary/10 p-12 text-center">
        <div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-secondary/10"></div>
        <div class="relative z-10">
          <h2 class="text-3xl font-bold mb-4 text-foreground">{service.data.cta.title}</h2>
          <p class="text-xl text-muted-foreground mb-8">{service.data.cta.subtitle}</p>
          <button 
            className="relative z-20 px-10 py-4 text-lg rounded-full font-semibold transition-all duration-300 hover:scale-[1.02] bg-primary text-primary-foreground shadow-lg hover:shadow-xl hover:bg-primary/90"
          >
            {service.data.cta.buttonText}
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>